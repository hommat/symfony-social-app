{% extends 'base.html.twig' %}

{% block body %}
  {% if app.user.id == post.authorId %}
    <form action="{{ url('app_posts_delete', { id: post.id }) }}" method="post">
      <input type="hidden" name="token" value="{{ csrf_token('delete-item') }}"/>
      <button type="submit">Delete</button>
    </form>
    <a href='{{path('app_posts_update', {id: post.id})}}'>Update</a>
  {% endif %}
  <h2>
    {{post.title}} - {{post.username}}
  </h2>
  <time>{{post.createdAt|date("m/d/Y")}}</time>
  <p>{{post.content}}
{% endblock %}
